<div class="row">
  <h1>Listing Images</h1>
</div>
    
  <% @images.each do |image| %>
    <div class="row">
      <h4><%= image.name.upcase %></h4>
      <%= link_to image_tag(image.picture.url), image %>
      <% if current_user == image.user %>
        <h6><%= link_to 'Edit', edit_image_path(image) %></h6>
        <h6><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></h6>
      <% end %>
    </div>
  <% end %>


<br>
<div class="row">
  <%= link_to 'Add New Image', new_image_path, class: 'btn btn-success' %>
</div>